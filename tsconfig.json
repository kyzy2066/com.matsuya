{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    // "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true, // 忽略 node_modules 里的类型检查
    "noImplicitAny": false, // 允许隐式 any
    "strict": false,

  },
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ]
}